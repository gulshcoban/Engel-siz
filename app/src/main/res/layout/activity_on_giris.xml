<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gelecegiyazanlar.mervegulsah.engelsizmobil.OnGiris"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout2"
    android:layout_marginLeft="20dp"
    android:layout_gravity="center_vertical"

   >

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/engelsiz"
        android:gravity="center"/>
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btnKullanici"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:background="@drawable/btnyesil"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:gravity="center"
        android:backgroundTint="@color/acikmavi"
        android:text="Kullanıcı Girişi" />
    <Button
        android:padding="10dp"
        android:id="@+id/btnDernek"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:background="@drawable/btnyesil"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:gravity="center"
        android:backgroundTint="@color/acikmavi"
        android:text="Dernek Girişi" />
</LinearLayout>



</RelativeLayout>
