<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gelecegiyazanlar.mervegulsah.engelsizmobil.Giris"
    android:background="@drawable/login_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:tint="@color/white"
            />
        <EditText
            android:id="@+id/giriskullaniciad"
            android:drawableLeft="@drawable/ic_kullanici_24dp"
            android:drawableTint="@color/white"
            android:drawablePadding="16dp"
            android:layout_marginTop="50dp"
            android:background="@color/gri"
            android:textColorHint="@color/white"
            android:hint="Kulanıcı Adı"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/girissifre"
            android:drawableLeft="@drawable/ic_kilit_24dp"
            android:drawableTint="@color/white"
            android:drawablePadding="16dp"
            android:background="@color/gri"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"
            android:hint="Sifre"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/girisbutton"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sing In"
            android:textColor="@color/white"
            android:background="@color/gri"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:gravity="center">
    <ImageButton
        android:id="@+id/imgfacebook"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_facebook"
        android:tint="@color/white"
        android:layout_margin="4dp"/>
    <ImageButton
        android:id="@+id/imgtwitter"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_twitter"
        android:tint="@color/white"
        android:layout_margin="4dp"/>
    <ImageButton
        android:id="@+id/imggoogle"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_google"
        android:tint="@color/white"
        android:layout_margin="4dp"/>

</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabın yok mu ?"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Kayıt Ol"
            android:id="@+id/edtkayit"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>
